{{> header}}

<h1>Mude sua senha</h1>

<form method="post">
    <label>
        Nova senha:
        <input type="password" name="password" />
    </label>
    <br>

    <label>
        Confirmar nova senha:
        <input type="password" name="password_confirm" />
    </label>
    <br>

    <label>
        <input type="submit" value="Alterar senha" />
    </label>
</form>